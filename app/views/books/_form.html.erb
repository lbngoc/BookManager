<%= form_for(@book, :html => {:class => "form-horizontal", :multipart => true}) do |f| %>
  <%= render 'shared/error_messages', model: @book %>
    
  <div class="form-group">
    <%= f.label :title, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :year, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :year %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cover, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.file_field :cover %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :author_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.collection_select :author_id,
           Author.order("name asc"), :id, :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.collection_select :category_id,
           Category.order("name asc"), :id, :name %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
