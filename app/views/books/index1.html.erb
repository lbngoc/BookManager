<table class="table table-bordered" id="books-table">
  <thead>
  	<tr>
  		<td>#</td>
  		<td>Author</td>
  		<td>Title</td>
  		<td>Year</td>
  		<td>Category</td>
  		<td>Select</td>
  		<td></td>
  	</tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
  	<tr>
  		<td><%= book.id %></td>
  		<td><%= book.author.name %></td>
  		<td><%= book.title %></td>
		<td><%= book.year %></td>
		<td><%= book.category.name %></td>
		<td><input type="checkbox" value="0" /></td>
		<td><a href='#'><i class="glyphicon glyphicon-remove"></i></a></td>
  	</tr>
  	<% end %>
  </tbody>
</table>
<script type="text/javascript">$("#books-table").dataTable();</script>