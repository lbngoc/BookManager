<% provide(:title, @category.name) %>

<div class="page-header">
	<h1>Category details</h1>
</div>

<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<td><%= @category.id %></td>
	</tr>
	<tr>
		<th>Name</th>
		<td><%= @category.name %></td>
	</tr>
	<tr>
		<th>Number of book(s)</th>
		<td><%= @category.books.size %></td>
	</tr>
</table>

<%= render 'shared/quick_actions', 
		back_link: categories_path,
		edit_link: edit_category_path(@category) %>