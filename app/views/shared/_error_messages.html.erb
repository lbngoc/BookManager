<% if model.errors.any? %>
    <div class="alert alert-block alert-info">
      <strong>Please correct <%= pluralize(model.errors.count, "error") %> before submit this form:</strong>

      <ol>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ol>
    </div>
 <% end %>