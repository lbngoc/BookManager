<% provide(:title, @author.name) %>

<div class="page-header">
	<h1>Author details</h1>
</div>

<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<td><%= @author.id %></td>
	</tr>
	<tr>
		<th>Name</th>
		<td><%= @author.name %></td>
	</tr>
	<tr>
		<th>Email</th>
		<td><%= @author.email %></td>
	</tr>
	<tr>
		<th>Number of book(s)</th>
		<td><%= @author.books.size %></td>
	</tr>
</table>

<%= render 'shared/quick_actions', 
		back_link: authors_path,
		edit_link: edit_author_path(@author) %>